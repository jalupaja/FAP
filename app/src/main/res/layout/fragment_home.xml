<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_balance"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="42000"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="48dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/graph_balance"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_balance"
        android:layout_height="600px"
        android:layout_margin="16dp"
        android:src="@drawable/chart_sample"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="134dp" />

    <LinearLayout
        android:id="@+id/cards_overview"
        app:layout_constraintTop_toBottomOf="@id/graph_balance"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#00ff00">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Einnahmen"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.5555"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#80CAF7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.5555"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#ff0000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ausgaben"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.5555"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/graph_stack"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cards_overview"
        android:layout_height="600px"
        android:layout_margin="16dp"
        android:src="@drawable/chart_sample"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="134dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
